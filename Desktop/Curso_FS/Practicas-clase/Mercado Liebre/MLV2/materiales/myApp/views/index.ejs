<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title><%= title %></title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<body>
	<!-- Header -->
	<%- include("../partials/header") %> 
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<% visitados.forEach(visitado => { %>			
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%= visitado.id %>/<%= visitado.category %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= visitado.image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<% let precioFinal = visitado.price - (visitado.discount*visitado.price/100) %>
							<h2>$<%= aMiles(precioFinal) %></h2>
							<% if (visitado.discount > 0) { %>
								<span><%= visitado.discount %> 40% OFF</span> 
							<% } %>
							<p><%= visitado.name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% }) %>
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<% ofertas.forEach(oferta => { %>			
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= oferta.id %>/<%= oferta.category %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= oferta.image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<% let precioFinal = oferta.price - (oferta.discount*oferta.price/100) %>
								<h2>$<%= aMiles(precioFinal) %></h2>
								<% if (oferta.discount > 0) { %>
									<span><%= oferta.discount %> 40% OFF</span> 
								<% } %>
								<p><%= oferta.name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include("../partials/footer") %>
	<!-- /footer -->
</body>
</html>